{% extends 'base.html.twig' %}

{% block title %}Accueil | Guesbaya Couture{% endblock %}

{% block body %}
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
{% include '_includes/_home-banner.html.twig' %}

<section>
    <div class ="d-flex justify-content-between align-items-baseline">
        <h2>Choisis ton Modèle</h2>
        <a href="https://www.picocleaners.com/blog/the-12-different-types-of-fabric/">En savoir plus sur les modèles</a>
    </div>
    <div class="row">
        {% for pattern in patterns %}
        <div class="col">
            <div class="card bg-light">
                <img src="{{ pattern.photo }}" class="card-img" alt="{{ pattern.name}}">
                <div class="card-img-overlay">
                    <p class="card-text">{{ pattern.type}}</p>
                </div>
                <div class = "card-body">
                    <h5 class = "card-text">{{ pattern.name }}</h5>
                    <i class="bi bi-plus-circle-fill"></i>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<section>
    <div class ="d-flex justify-content-between align-items-baseline">
        <h2>Choisis ton tissus</h2>
        <a href="https://www.picocleaners.com/blog/the-12-different-types-of-fabric/">En savoir plus sur les types de tissus</a>
    </div>
    <div class="row">
        {% for fabric in fabrics %}
        <div class="col">
            <div class="card bg-light">
                <img src="{{ fabric.photo }}" class="card-img" alt="{{ fabric.name}}">
                <div class="card-img-overlay">
                    <p class="card-text">{{ fabric.type}}</p>
                </div>
                <div class = "card-body">
                    <h5 class = "card-text">{{ fabric.name }}</h5>
                    <i class="bi bi-plus-circle-fill"></i>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<section>
    <div class ="d-flex justify-content-between align-items-baseline">
        <h2>Renseigne tes mesures</h2>
        <a href="https://www.youtube.com/watch?v=poLiCQLboXI">Comment prendre ses mesures</a>
    </div>

    <div class="row">
        <div class='form-control w-50 col-6'>
            {{ form(form) }}
        </div>
        {# Measurement form
        <div class='form-control w-50 col-6'>
                {{ form_start(form) }}
                <div class="mb-3">
                    <div class="form-error text-danger">
                        {{ form_errors(form.shoulderWidth) }}
                    </div>
                    {{ form_label(form.shoulderWidth, 'Tour d\'épaules')}}
                    {{ form_widget(form.shoulderWidth)}} mètres
                </div>
                <div class="mb-3">
                    <div class="form-error text-danger">
                        {{ form_errors(form.bust) }}
                    </div>                   
                    {{ form_label(form.bust, 'Tour de poitrine')}}
                    {{ form_widget(form.bust)}} mètres
                </div>
                <div class="mb-3">
                    <div class="form-error text-danger">
                        {{ form_errors(form.waist) }}
                    </div>
                    {{ form_label(form.waist, 'Tour de taille')}}
                    {{ form_widget(form.waist)}} mètres
                </div>
            <button class="btn btn-secondary">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form, {render_rest: false}) }}
        </div>
        End of form #}
        <div class = "col-6">
            <img src="{{ asset('build/images/measurements.jpg') }}" alt="Guide des mesures" class="w-100">
        </div>
</section>

{% endblock %}
