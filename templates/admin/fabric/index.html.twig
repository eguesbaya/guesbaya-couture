{% extends 'base.html.twig' %}

{% block title %}Fabric index{% endblock %}

{% block body %}
    <h1>Fabric index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Type</th>
                <th>PriceByMetre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fabric in fabrics %}
            <tr>
                <td>{{ fabric.id }}</td>
                <td>{{ fabric.name }}</td>
                <td>{{ fabric.photo }}</td>
                <td>{{ fabric.type }}</td>
                <td>{{ fabric.priceByMetre }}</td>
                <td>
                    <a href="{{ path('fabric_show', {'id': fabric.id}) }}">show</a>
                    <a href="{{ path('fabric_edit', {'id': fabric.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fabric_new') }}">Create new</a>
{% endblock %}
