{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mot de passe | Guesbaya Couture{% endblock %}

{% block body %}
<section class ="container mt-5">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_label(requestForm.email, 'Email') }}
        {{ form_widget(requestForm.email) }}
        <div id="emailHelp" class="form-text mb-3">
            Veuillez renseigner votre email. Nous vous enverrons un lien afin de réinitialiser votre mot de passe.
        </div>

        <button class="btn btn-primary">Send password reset email</button>
    {{ form_end(requestForm) }}
</section>
{% include '_includes/_form-footer.html.twig' %}
{% endblock %}
